		// 배열 포인터
		int arr1[3] = { 0, 1, 2 };
		int arr2[2][3] = { { 0, 1, 2 }, { 3, 4, 5 } };
		int arr3[3][3] = { { 0, 1, 2 }, { 3, 4, 5 }, { 6, 7, 8 } };

		// 연산자 우선순위 () 처리
		int(*ptrArr)[3] = arr1;

		for (int i = 0; i < 3; i++)
			printf("%d ", ptrArr[0][i]);

		printf("\n\n");
		ptrArr = arr2;
		
		for (int i = 0; i < 2; i++)
		{
			for (int j = 0; j < 3; j++)
			{
				printf("%d", ptrArr[i][j]);
			}
			printf("\n");
		}

		printf("\n\n");
		ptrArr = arr3;

		for (int i = 0; i < 3; i++)
		{
			for (int j = 0; j < 3; j++)
			{
				printf("%d", ptrArr[i][j]);
			}
			printf("\n");
		}
	}

	return 0;
}

void doublePointer()
{
	double num = 3.14;
	double* ptr = &num;
	double** pptr = &ptr;

	printf("&dptr = 0x%p\n", &pptr);
	printf("&ptr = 0x%p\n", &ptr);
	printf("&a = 0x%p\n\n\n", &num);

	printf("ptr : 0x%p\n", &ptr);
	printf("ptr : 0x%p\n\n\n", pptr);

	printf("ptr : 0x%p\n", &num);
	printf("ptr : 0x%p\n", &ptr);
	printf("ptr : 0x%p\n\n\n", *pptr);

	printf("num = %g\n", num);
	printf("num = %g\n", *ptr);
	printf("num = %g\n", **pptr);

	**pptr = 5.0;

	printf("num = %g\n\n", num);
}

void SwapNumber(int a, int b)
{
	int temp = a;
	a = b;
	b = temp;

	printf("함수 안 %d %d \n\n", a, b);
}

void SwapPtrNumber(int* a, int* b)
{
	int* temp = *a;
	*a = *b;
	*b = temp;

	printf("ptr함수 안 %d %d \n\n", *a, *b);
}

void SwapPPtrNumber(int** a, int** b)
{
	// 변수의 주소 위치 변경

	int* temp = *a;
	*a = *b;
	*b = temp;

	printf("pptr함수 안 %d %d \n\n", **a, **b);	
}

