#include <stdio.h>
#include <string.h>

int main()
{
 
 
 
 
	{
		int arr[][3] = { 1, 2, 3, 4, 5, 6 };
		// 2í–‰ 3ì—´
		int* p = arr[1];

		int x = *p;
		int y = *(p + 2);

		printf("%d %d", x, y);
	}

	{
		int arr[3][3] = { 1, 2, 3, 4, 5, 6, 7, 8, 9 };
		int sum1 = *(*arr + 1) + *(*arr + 2); // 2 + 3 = 5
		int sum2 = *arr[1] + arr[2]; // 4 + 7 = 11
	}

	{
		char str1[20] = "KOREA";
		char str2[20] = "LOVE";

		char* p1 = str1;
		char* p2 = str2;

		str1[1] = p2[2];
		str2[3] = p1[4];

		strcat_s(str1, str2);
		// KVREALOVA
		// *(p1 + 2) == R
	}

	{
		int arr[2][3] = { 1, 2, 3, 4, 5, 6 };
		int(*p)[3] = NULL;

		p = arr;
		int sum1 = *(p[0] + 1) + *(p[1] + 2); // 2 + 6 = 8
		int sum2 = *(*(p + 1) + 0) + *(*(p + 1) + 1); // 4 + 5 = 9
	}

	return 0;
}
